<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>tweet</servlet-name>
    <servlet-class>com.servlet.Servlets.TweetServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>tweets</servlet-name>
    <servlet-class>com.servlet.Servlets.TweetListServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>indexPage</servlet-name>
    <jsp-file>/index.html</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>uploadFile</servlet-name>
    <servlet-class>com.servlet.Servlets.FileUploadServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>tweet</servlet-name>
    <url-pattern>/tweet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>tweets</servlet-name>
    <url-pattern>/tweets/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>indexPage</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>uploadFile</servlet-name>
    <url-pattern>/upload</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.css</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.js</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.jpg</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.png</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>ServerFilter</filter-name>
    <filter-class>com.servlet.Servlets.FilterServlet</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ServerFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
